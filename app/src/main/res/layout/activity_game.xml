<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/relLayout">

    <ImageButton
        android:id="@+id/letterX"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/letterA"
        android:layout_alignStart="@+id/letterA"
        android:layout_below="@+id/letterH"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_x" />

    <ImageButton
        android:id="@+id/letterM"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/letterH"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_m" />

    <ImageButton
        android:id="@+id/letterF"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/letterB"
        android:layout_marginTop="47dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_f" />

    <ImageButton
        android:id="@+id/letterB"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_b" />

    <ImageButton
        android:id="@+id/letterE"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/letterB"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_e" />

    <ImageButton
        android:id="@+id/letterH"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/letterB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_h" />

    <ImageButton
        android:id="@+id/letterK"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/letterF"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_k" />

    <ImageButton
        android:id="@+id/letterA"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/letterC"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/letterC"
        android:layout_marginBottom="63dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_a" />

    <ImageButton
        android:id="@+id/letterC"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/letter_c" />

    <ImageButton
        android:id="@+id/horseStep1"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="250dp"
        android:layout_height="100dp"

        android:layout_alignEnd="@+id/letterA"
        android:layout_alignRight="@+id/letterA"
        android:layout_alignTop="@+id/horseStep2"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:adjustViewBounds="true"
        android:background="@drawable/background_left"
        android:contentDescription='aire "paso"'
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/step1"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/horseStep2"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="250dp"
        android:layout_height="100dp"

        android:layout_alignLeft="@+id/letterA"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/letterA"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:adjustViewBounds="true"
        android:background="@drawable/background_right"
        android:contentDescription='aire "trote"'
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/step2"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/buttom_back"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/button_restart"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/restart" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/settings"
        tools:layout_editor_absoluteX="650dp"
        tools:layout_editor_absoluteY="110dp" />

</RelativeLayout>