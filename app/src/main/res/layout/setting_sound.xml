<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/general_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:text="Ajustes"
        android:textColor="?attr/colorControlActivated"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/buttom_back"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/back" />

    <Switch
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttom_back"
        android:layout_marginTop="211dp"
        android:layout_toEndOf="@+id/buttom_back"
        android:layout_toRightOf="@+id/buttom_back"
        android:checked="true"
        android:showText="false" />

    <TextView
        android:id="@+id/soundTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sound"
        android:layout_alignLeft="@+id/sound"
        android:layout_alignStart="@+id/sound"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textSize="30sp"
        android:text="Sonido" />


</RelativeLayout>