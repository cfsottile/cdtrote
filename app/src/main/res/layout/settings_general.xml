<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/general_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ConfiguraciÃ³n General"
        android:textColor="?attr/colorControlActivated"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextViewEdits" />

    <ImageButton
        android:id="@+id/buttom_back"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/back" />

    <SeekBar
        android:id="@+id/seekBarLevel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_config"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:max="2" />

    <TextView
        android:id="@+id/levelTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBarLevel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="NIVEL"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/levelSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/levelTittle"
        android:layout_alignStart="@+id/levelTittle"
        android:layout_below="@+id/seekBarLevel"
        android:layout_marginTop="29dp"
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/tableSelected"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/levelSelected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"
        />

    <TextView
        android:id="@+id/tableTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableSelected"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="TABLA"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />


</RelativeLayout>